// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                    String
  login                 String
  email                 String
  password              String
  createdAt             DateTime               @default(now()) @map("created_at")
  UserEmailConfirmation UserEmailConfirmation?
  UserBanInfo           UserBanInfo?
}

model UserEmailConfirmation {
  user             User    @relation(fields: [userId], references: [id])
  userId           String  @unique
  confirmationCode String? @default("null")
  expirationDate   String? @default("null")
  isConfirmed      Boolean @default(false)
}

model UserBanInfo {
  user      User     @relation(fields: [userId], references: [id])
  userId    String   @unique
  banDate   DateTime @default(now()) @map("created_at")
  banReason String
}